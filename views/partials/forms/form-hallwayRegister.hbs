<main class="login-form">
    <div class="center">
        <h1 class="login-header">Rejestracja</h1>
        <form action="/auth/register" method="POST">
            <div class="data">
                <div class="txt_field">
                    <label for="name">Imię
                        <input type="text" name="name" required></label>
                </div>
                <div class="txt_field">
                    <label for="login">Login
                        <input type="text" name="login" required></label>
                </div>
                <div class="txt_field">
                    <label for="password">Hasło
                        <input type="password" name="password" required></label>
                </div>
                <div class="txt_field">
                    <label for="email">E-mail
                        <input type="text" name="email" required></label>
                </div>
                <input class="submit-button" type="submit" value="Zarejestruj">
            </div>
        </form>
    </div>
</main>