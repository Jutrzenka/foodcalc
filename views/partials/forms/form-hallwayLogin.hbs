<main class="login-form">
    <div class="center">
        <h1 class="login-header">Logowanie</h1>
        <form action="/auth/login" method="POST">
            <div class="data">
                <div class="txt_field">
                    <label for="login">Login
                        <input type="text" name="login" required></label>
                </div>
                <div class="txt_field">
                    <label for="password">Hasło
                        <input type="password" name="password" required></label>
                </div>
                <input class="submit-button" type="submit" value="Zaloguj">
            </div>
        </form>
        <div class="signup_link">
            <p>Nie masz konta?</p><a href="/hallway/register">Zarejestruj się!</a>
        </div>
    </div>
</main>